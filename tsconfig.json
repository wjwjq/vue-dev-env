{
    "typeAcquisition": {
        "enable": true
    },
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "traceResolution": true,
        "declaration": false,
        "target": "es5",
        "module": "commonjs",
        "noLib": false,
        "isolatedModules": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings",
        "public"
    ]
}